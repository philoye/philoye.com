%meta{content: 'Design snob, cocktail/coffee nerd, and all-around geek. Founder of labcoat.io', name:'description'}
%meta{content: 'Design snob, cocktail/coffee nerd, and all-around geek. Founder of labcoat.io', property: 'og:description'}
%meta{content: 'Phil Oye', property: 'og:title'}
%meta{content: 'http://philoye.com', property: 'og:url'}
%meta{content: 'website', property: 'og:type'}
:javascript
  try{Typekit.load({ async: true });}catch(e){}
:sass
  $text-dark:  #444
  $text-light: #888
  $link-color: darken(red, 10%)

  *
    -webkit-font-smoothing: antialiased
    margin: 0
    padding: 0
    box-sizing: border-box

  p
    padding-bottom: 1.5rem

  body
    color: $text-dark
    line-height: 1.5
    text-align: center
    font-family: "proxima-nova",sans-serif
    font-weight: 400

  .avatar
    border-radius: 50%
    border: 3px solid #bbb
  h1
    font-size: 150%
    font-weight: bold

  h2, h3
    font-size: 1rem
    font-weight: normal
    margin-bottom: 1rem
    text-align: center

  h3
    font-style: italic

  .Icon
    border-radius: 3px
    display: inline-block
    height: 36px
    width: 36px
    vertical-align: middle
    position: relative
    &.Icon--Smaller
      height: 30px
      width: 30px
  a, a:visited
    color: $link-color
    text-decoration: none

    .Icon
      fill: $text-dark
    &:hover
      color: $link-color
      .Icon
        fill: $link-color
  nav
    a
      text-decoration: none
      display: inline-block
      position: relative
      text-align: left
      font-weight: bold
      color: $text-dark
      &.text
        margin-left: 2px
        position: relative
        top: 2px

  footer
    padding: 2rem 0 2rem

  .Stripe
    padding-top: 3rem
    padding-bottom: 2rem
    position: relative
    .Stripe__Inner
      width: 300px
      margin: auto
    .Stripe__Leadin
      position: absolute
      bottom: 0
      width: 300px
      text-align: center

  .Stripe--Hero
    padding-top: 22vh
    padding-bottom: 28vh

  .Stripe--Previously
    min-height: auto

  .Stripe--Separator
    padding-top: 8rem

  .Stripe--Labcoat
    background-color: rgb(237, 15, 138)

  .Stripe--Moment
    background-color: #404041

  .Stripe--Atlassian
    background-color: #205081

  .Stripe--CampaignMonitor
    background-color: #18a0d9

  .Stripe--Sapient
    background-color: #E65C3D

  .Stripe--Maya
    background-color: rgb(7,99,99)

  .Stripe--Reversed
    color: white
    a, a:hover
      color: white
      border-bottom: 1px dotted white

  .Logo
    padding-bottom: 1rem
    svg
      margin: 0 auto 2rem auto
      width: 250px
      height: 100px
      display: block

  .campaignmonitor-logo .logo-color
    fill: white

  svg.maya-logo
    height: 35px

  svg.sapient-logo
    height: 65px
    path
      fill: white

