/
  Hello, my source viewing friend!
  You can check out the source at https://github.com/philoye/philoye.com

%meta{ :charset => 'utf-8' }
%meta{ :name => 'viewport', :content => 'width=device-width, initial-scale=1' }
%title Phil Oye
%script{type: 'text/javascript', src: "https://use.typekit.net/zcl8xyz.js"}
%meta{content: 'Design snob, cocktail/coffee nerd, and all-around geek.', name:'description'}
%meta{content: 'Design snob, cocktail/coffee nerd, and all-around geek.', property: 'og:description'}
%meta{content: 'Phil Oye', property: 'og:title'}
%meta{content: 'http://philoye.com', property: 'og:url'}
%meta{content: 'website', property: 'og:type'}
:sass
  $text-dark:  #444
  $text-light: #888
  $link-color: #666

  .BackToHome
    position: absolute
    top: 1rem
    left: 1rem

  .float-right
    float: right
    width: 50%
    height: auto
    padding-left: 1rem
    padding-bottom: 1rem

  .u-half-width
    width: 48%
    height: auto

  *
    -webkit-font-smoothing: antialiased
    margin: 0
    padding: 0
    box-sizing: border-box

  p
    padding-bottom: 1.5rem

  body
    color: $text-dark
    line-height: 1.5
    text-align: center
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif
    font-weight: 400

  .avatar
    border-radius: 50%
    border: 3px solid #bbb
    &.avatar-small
      border-width: 2px
  h1
    font-size: 150%
    font-weight: bold

  h2, h3
    font-size: 1rem
    font-weight: normal
    margin-bottom: 1rem
    text-align: center

  h3
    font-style: italic

  .Icon
    border-radius: 3px
    display: inline-block
    height: 36px
    width: 36px
    vertical-align: middle
    position: relative
    &.Icon--Smaller
      height: 30px
      width: 30px
  a, a:visited
    color: $link-color
    text-decoration: none

    .Icon
      fill: $text-dark
    &:hover
      color: $link-color
      .Icon
        fill: $link-color
  nav
    a
      text-decoration: none
      display: inline-block
      position: relative
      text-align: left
      font-weight: bold
      color: $text-dark
      &.text
        margin-left: 2px
        position: relative
        top: 2px

  footer
    padding: 2rem 0 2rem

  .Stripe
    padding-top: 3rem
    padding-bottom: 2rem
    position: relative
    .Stripe__Inner
      width: 300px
      margin: auto
    .Stripe__Leadin
      position: absolute
      bottom: 0
      width: 300px
      text-align: center

  .Stripe--Hero
    padding-top: 22vh
    padding-bottom: 28vh

  .Stripe--Previously
    min-height: auto

  .Stripe--Separator
    padding-top: 8rem

  .Stripe--Labcoat
    background-color: rgb(237, 15, 138)

  .Stripe--Moment
    background-color: #404041

  .Stripe--Atlassian
    background-color: #205081

  .Stripe--CampaignMonitor
    background-color: #18a0d9

  .Stripe--Sapient
    background-color: #E65C3D

  .Stripe--Maya
    background-color: rgb(7,99,99)

  .Stripe--Reversed
    color: white
    a, a:hover
      color: white
      border-bottom: 1px dotted white

  .Logo
    padding-bottom: 1rem
    svg
      margin: 0 auto 2rem auto
      width: 250px
      height: 100px
      display: block

  .campaignmonitor-logo .logo-color
    fill: white

  svg.maya-logo
    height: 35px

  svg.sapient-logo
    height: 65px
    path
      fill: white

  .Article
    max-width: 40rem
    margin: 0 auto
    text-align: left
    clear: all
    padding: 0 1rem

  .Article
    margin-top: 10rem
    a
      color: darken(red, 15%)
      border-bottom: 1px dotted darken(red, 15%)
    img
      display: inline
      height: auto
    .lede
      padding-bottom: 3rem

  .u-full-width
    width: 100%
    height: auto
  dl
    overflow: auto
    margin-bottom: 1rem
  dt
    font-weight: bold
    float: left
    width: 5em
    clear: both
  dd
    float: left
  hr
    border: 0
    border-top: 1px solid #ddd

  .smallcaps
    font-variant: small-caps

%link{rel: "openid.server", href: "http://www.myopenid.com/server" }
%link{rel: "openid.delegate", href: "http://#{ENV['USERNAME']}.myopenid.com" }

